@model SourceControlFinalAssignment.Models.tbl_userdata

@{
    ViewBag.Title = "Login";
}

<style>

    body {

        background-color: rgb(219, 226, 226);
    }

    .row {
        background-color: white;
        border-radius: 30px;
        box-shadow: 12px 12px 22px grey;
    }
    img {
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
    }

    .mybtn{
        border: none;
        outline: none;
        height: 50px;
        width: 100%;
        background-color: black;
        color: white;
        border-radius: 4px;
        font-weight:bold;


    }
    .mybtn:hover{
        background-color: white;
        border: 1px solid black;
        color : black;           

    }
    .imgproper {
        max-width: 100%;
        height: 700px;
    }


</style>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <body>
        <section class="Form my-4 mx-5">
            <div class="container">
                <div class="row no-gutters" style="height:700px">
                    <div class="col-lg-5">
                        <img src="~/projectimages/image1.jpg" class="imgproper" alt="Please Wait lo load" />
                    </div>
                    <div class="col-lg-7 pt-5">
                        <h1 class="font-weight-bold py-3">Login</h1>
                        <h4>Sign into your account</h4>
                        <form>
                            <div class="form-row">
                                <div class="col-lg-7">


                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control my-3 p-4", placeholder = @Html.DisplayNameFor(model => model.Email) } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-lg-7">

                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control my-3 p-4", placeholder = @Html.DisplayNameFor(model => model.Password) } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-lg-7">
                                    <input type="submit" value="Login" class="mybtn mt-3 mb-5" />
                                </div>
                            </div>

                            <p>Don't have an account?  <a href="@Url.Action("Register","User")">Register here</a></p>

                       

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </body>



    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>

}


