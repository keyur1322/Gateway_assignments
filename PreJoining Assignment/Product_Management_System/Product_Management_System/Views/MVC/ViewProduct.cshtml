@model Product_Management_System.Models.tbl_Products

@{
    ViewBag.Title = "ViewDetails";
}

<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" />


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


    <link href="~/Content/CSS/Site2.css" rel="stylesheet" />


</head>
<body style="overflow:hidden;">

    <nav class="navbar bg-light navbar-light" style="margin-left:290px; margin-top:10px; margin-right:5px;">

        <ul class="navbar-nav">
            <li class="nav-item">
                <p class="font-weight-bolder mt-2">Welcome User !! </p>
            </li>
        </ul>

        <div>
            <button class="btn btn-outline-secondary mx-3 my-2" onclick="location.href='@Url.Action("Logout", "MVC")'">Logout</button>
        </div>
    </nav>

    <div class="vertical-nav bg-white" id="sidebar" style="margin-left:5px; margin-top:10px;">
        <div class="py-4 px-3 mb-4 bg-light">
            <div class="media d-flex align-items-center">
                
                <img src="@Session["userimg"]" alt="..." width="90" height="90" style="border:4px solid white;" class="mr-3 rounded-circle shadow-sm" />
                
                <div class="media-body">
                    <h6 class="m-0">@Session["useremail"]</h6>
                    <p class="font-weight-normal text-muted mb-0">Web User</p>
                </div>
            </div>
        </div>

        <p class="text-white font-weight-bold text-uppercase px-3 small pb-4 mb-0">Dashboard</p>

        <ul class="ulclass" style="list-style:none;">
            <li class="nav-text">
                <a href="/MVC/Dashboard" class="nav-link text-white bg-transparent">
                    <i class="fas fa fa-dashboard"></i>
                    Dashboard
                </a>
            </li>

            <li class="nav-text">
                <a href="/MVC/AddProduct" class="nav-link text-white bg-transparent">
                    <i class="fas fa fa-plus-circle"></i>
                    Add Product
                </a>
            </li>
            <li class="nav-text">

                <a href="/MVC/ProductList" class="nav-link text-white bg-transparent">
                    <i class="fas fa fa-list"></i>
                    List
                </a>
            </li>
        </ul>

    </div>
 
        <div class="container" style="margin-left:310px; margin-top:50px;">
            <div class="row no-gutters" style="height:400px">
                <div class="col-lg-4 mx-4 my-5">
                    <img src="@Html.ViewData["large"]" class="imgproduct" alt="not found" width="350" height="350" />
                </div>
                <div class="col-lg-7 pt-5">
                    <form>
                        <ul class="list-group">
                            <li class="list-group-item active">@Session["Name"]<i class="" style="float:right;"></i></li>
                            <li class="list-group-item">@Session["Category"]<i class="fa fa-list-alt" style="float:right;"></i></li>
                            <li class="list-group-item">Price - @Session["Price"]<i class="fa fa-inr" style="float:right;"></i></li>
                            <li class="list-group-item">Quantity - @Session["Quantity"]<i class="fa fa-sort-amount-asc" style="float:right;"></i></li>
                            <li class="list-group-item">@Session["ShortDescription"]<i class="fa fa-info" style="float:right;"></i></li>
                            <li class="list-group-item">@Session["LongDescription"]<i class="fa fa-info" style="float:right;"></i></li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
  

</body>
</html>
