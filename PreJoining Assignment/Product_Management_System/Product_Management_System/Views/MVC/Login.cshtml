@model Product_Management_System.Models.tbl_Users

@{
    ViewBag.Title = "Login";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />

    <link href="~/Content/CSS/Site.css" rel="stylesheet" />

</head>
<body>
    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="myCard">
                <div class="row">
                    <div class="col-md-6">
                        <div class="myLeftCtn">
                            <form class="myForm text-center">
                                <header>Login Here !!</header>

                                <div class="mygroup">
                                  
                                    <i class="fas fa-envelope"></i>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "myInput", placeholder = @Html.DisplayNameFor(model => model.Email) } })<br />
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation" })

                                </div>

                                <div class="mygroup">
                                  
                                    <i class="fas fa-lock"></i>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "myInput", placeholder = @Html.DisplayNameFor(model => model.Password) } })<br />
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation" })

                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Login" class="butt" />
                                    </div>
                                </div>


                                <p class="ptext">Don't have an account?  <a href="@Url.Action("Register","MVC")">Register here</a></p>

                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="myRightCtn">
                            <div class="box">

                                <img src="~/Content/frontend_image/5.svg" class="img-fluid" />


                                <p class="text">"Things to be changed."</p>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery-3.5.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


